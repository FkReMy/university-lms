# -------------------------------
# University LMS Backend .env Example
# -------------------------------

# -------------------------------
# Database Settings
# -------------------------------
POSTGRES_DB=lms
POSTGRES_USER=lms_user
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DATABASE_URL=postgresql+psycopg2://lms_user:REPLACE_WITH_STRONG_PASSWORD@db:5432/lms

# -------------------------------
# JWT/Authentication Settings
# -------------------------------
JWT_SECRET_KEY=REPLACE_WITH_RANDOM_SECRET_KEY
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRES_MINUTES=43200
JWT_ALGORITHM=HS256

# -------------------------------
# Argon2id Password Hasher Settings
# (Tweak to suit prod workload/hardware)
# -------------------------------
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=4

# -------------------------------
# File Uploads/Storage
# -------------------------------
UPLOADS_PATH=/uploads                # This must map to a secure path inside backend container
MAX_UPLOAD_SIZE_MB=25                # Enforced both in backend and nginx/proxy if any
ALLOWED_UPLOAD_MIME_TYPES=pdf,docx,zip,txt,png,jpg

# -------------------------------
# Email Settings (for notifications, password reset, etc)
# -------------------------------
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-smtp-user
EMAIL_HOST_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com
EMAIL_TLS=True

# -------------------------------
# Redis Settings (for caching, tasks, future features)
# -------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# -------------------------------
# CORS & Security
# -------------------------------
ALLOWED_ORIGINS=http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
ALLOWED_HEADERS=Authorization,Content-Type

# -------------------------------
# Logging
# -------------------------------
LOG_LEVEL=INFO

