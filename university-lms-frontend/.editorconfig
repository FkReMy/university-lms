# EditorConfig helps maintain consistent coding styles between editors and IDEs.
# Ref: https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Allow trailing spaces in Markdown for deliberate line breaks
[*.md]
trim_trailing_whitespace = false

# 2-space indentation for YAML/JSON configs
[*.{yml,yaml,json}]
indent_size = 2

# 2-space indentation for JS/TS (and JSX/TSX)
[*.{js,jsx,ts,tsx}]
indent_size = 2

# 2-space indentation for SCSS
[*.scss]
indent_size = 2