# .editorconfig for University LMS Frontend (Production Ready)
# ------------------------------------------------------------
# Maintains consistent coding styles across editors and IDEs for all contributors.
# For details: https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Allow trailing spaces in markdown (for line breaks, lists, etc.)
[*.md]
trim_trailing_whitespace = false

# 2-space indentation for YAML, JSON, JS/TS, JSX/TSX, and SCSS for project-wide consistency
[*.{yml,yaml,json}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.scss]
indent_size = 2